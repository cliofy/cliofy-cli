{
  "name": "@cliofy/cli",
  "version": "0.1.0",
  "description": "CLI interface package for Cliofy",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cliofy": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --build",
    "build:npm": "tsc --build && chmod +x dist/index.js",
    "build:standalone": "esbuild src/index.ts --bundle --platform=node --outfile=dist/cliofy.js --banner:js=\"#!/usr/bin/env node\"",
    "build:binary": "pnpm run build:standalone && pkg dist/cliofy.js --out-path=../../bin/",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cliofy/core": "workspace:*",
    "react": "^18.2.0",
    "ink": "^4.4.1",
    "yargs": "^17.7.2",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/react": "^18.2.42",
    "@types/yargs": "^17.0.32",
    "@types/inquirer": "^9.0.7",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "prettier": "^3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  }
}